# This is how classes are written in Spearmint

class Book {
    # fields
    var name = "TemplateBookClass";
    var author = "Unknown";

    # methods
    fun read() {
        return "Reading " + name + ".";
    };
};

# Creating a book
var myFavoriteBook = new Book("TaleOfMemories");

print(myFavoriteBook.read());

Book.name = "Toaru Kagaku no Railgun";
print(myFavoriteBook.name);
